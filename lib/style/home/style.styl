.Home
	height 100vh
	&__containner
		display flex
		justify-content space-between
		flex-wrap wrap
		position relative
		height 100%
		width 100%
		&--left
			width 50%
			height 100%
			display flex
			align-items center
			justify-content flex-end
			.CoverImage
				background-image: url('../images/mobile.svg')
				width 70%
				background-size contain
				background-position center
				background-repeat no-repeat
				height 70vh
		&--right
			width 50%
			display flex
			align-items center
			justify-content center
			flex-direction column
			height 100%
			.LoginContainner
				margin 10px 0
				border-radius 2px
				width 90%
				box-sizing border-box
				max-width 380px
				background-color white
				box-shadow 0px 0px 5px #dadada
				padding 1.5em
				&__title
					padding 0 0 20px
					color Azul_Bold
				&__form
					max-width 320px
					&--inputContainner
						margin 5px 0
						input
							height 34px
							font-size 14px
					&--dateForget
						width 100%
						text-align center
						p
							color Gris_light
							font-size 15px
							font-weight lighter
							font-family AvenirLight
							display inline-block
						a
							color Verde_bold
							margin-left 5px
							font-size 15px
							display inline-block
							font-family AvenirBold
							text-decoration underline
							// font-weight bold
					&--btnSubmit
						width 100%
						margin 10px 0
						.loginSubmit
							height 34px
							border 0
							cursor pointer
							background-color Gris_Login
							color white
							padding 5px 5px
							font-weight bold
							font-size 14px
							width 100%
							border-radius 5px
				.ErrorLogin
					text-align center
					color Rojo_error
					font-size 13px
		&--footer
			width 100%
			position absolute
			bottom 0
			.Links
				width 90%
				margin 0 auto
				display flex
				&__left
					text-align left
					width 70%
					list-style none
					margin 0
					padding 0
					// display flex
					// justify-content space-around
					&--list
						min-width 100px
						display inline-block
						padding 1em 0
						margin-right 33px
						a
							// font-weight bold
							font-size 12px
							font-family AvenirBold
							color Gris_footer
				&__right
					width 30%
					// text-align right
					display flex
					justify-content flex-end
					align-items center
					p
						font-family AvenirBold
						font-size 12px
						color Gris_lighter